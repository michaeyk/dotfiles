# Sync calloptima

# Send mail
set from     = "Michael Kim <mike@calloptima.com>"
set sendmail = "/usr/bin/msmtp -a calloptima"
set sendmail_wait = 0
unset record

color status blue default
set signature        = "~/.mutt/accounts/calloptima.sig"   # my signature file

# Other special folders.
set mbox      = "+calloptima/archive"
set postponed = "+calloptima/drafts"

# Default inbox.
set spoolfile = "+calloptima/Inbox"

# Alternate email addresses.
alternates mike@michaelkim.net

